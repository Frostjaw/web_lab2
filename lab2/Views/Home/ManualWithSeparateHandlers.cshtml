
@{
    ViewData["Title"] = "ManualWithSeparateHandlers";
}

<h2>ManualWithSeparateHandlers</h2>
<form method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label for="User" class="col-md-2 control-label">First number:</label>
        <div class="col-md-4">
            <input type="text" name="firstNumber" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            <select name="operation">
                <option>+</option>
                <option>-</option>
                <option>*</option>
                <option>/</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="Address" class="col-md-2 control-label">Second number:</label>
        <div class="col-md-4">
            <input type="text" name="secondNumber" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Отправить" />
        </div>
    </div>
</form>

@if (ViewData.ContainsKey("result"))
{
    <h2>Result</h2>
    <p>@ViewData["firstNumber"] @ViewData["operation"] @ViewData["secondNumber"] = @ViewData["result"]</p>
}
